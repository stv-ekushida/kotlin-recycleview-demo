<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_course_lesson_thumbnail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,16:9"/>
    <TextView
            android:text="Course LessonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_course_lesson_title"
            app:layout_constraintStart_toEndOf="@+id/imageView_course_lesson_thumbnail"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_duration"
            app:layout_constraintTop_toBottomOf="@+id/textView_course_lesson_title"
            app:layout_constraintStart_toEndOf="@+id/imageView_course_lesson_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/textView_course_lesson_title"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
